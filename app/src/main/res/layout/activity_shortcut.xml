<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".homepage.Shortcut_Activity">

    <LinearLayout
        android:id="@+id/layout_Shortcuts"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backButton_Shortcuts_activity"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_keyboard_backspace_24"
            android:background="@color/white"
            android:contentDescription="Back"
            ></ImageButton>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/white"></Space>

        <TextView
            android:id="@+id/text_Shortcuts_activity"
            android:layout_width="235dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:text="Shortcuts"
            android:textSize="28dp"
            android:textStyle="bold"></TextView>

        <Space
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:background="@color/white"></Space>

        <Button
            android:id="@+id/Shortcuts_save_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Save"
            android:textColor="@color/Bule"
            app:backgroundTint="@color/white" />

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/white"></Space>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/Theme"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <TextView
            android:gravity="center_vertical"
            android:textColor="@color/Gray"
            android:textSize="18dp"
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=" Saved Shortcuts" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <TextView
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:id="@+id/textView5"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=" No saved Shortcuts" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/Theme"></View>
    <LinearLayout
        android:id="@+id/Create_shortcut_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/baseline_add_24"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:gravity="center_vertical"
            android:textColor="@color/Bule"
            android:id="@+id/textView6"
            android:layout_width="306dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CREATE SHORTCUT"
            android:textStyle="bold"
            android:textSize="20dp"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/Theme"></View>

    <Space
        android:layout_width="match_parent"
        android:layout_height="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <TextView
            android:gravity="center_vertical"
            android:textColor="@color/Gray"
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="18dp"
            android:text=" Suggested Shortcuts" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Theme"></View>

</LinearLayout>