<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage.OrganizationsActivity"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/layout_organizations"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <ImageButton
            android:id="@+id/backButton_organizations"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            app:srcCompat = "@drawable/baseline_keyboard_backspace_24"
            android:background="@drawable/button_selector"
            android:contentDescription="Back"
            ></ImageButton>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/white"></Space>

        <TextView
            android:id="@+id/text_organizations"
            android:layout_width="288dp"
            android:layout_height="match_parent"
            android:text="Organizations"
            android:textSize="28dp"
            android:textStyle="bold"
            android:background="@color/white"></TextView>
        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/white"></Space>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/center_organizations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Theme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="There aren't any Organizations."
            android:textSize="26dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            ></TextView>
    </RelativeLayout>
</LinearLayout>