<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Shortcut_Activity">

    <LinearLayout
        android:id="@+id/layout_Shortcuts"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backButton_Shortcuts_activity"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_selector"
            android:contentDescription="Back"
            app:srcCompat="@drawable/baseline_keyboard_backspace_24"></ImageButton>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/white"></Space>

        <TextView
            android:id="@+id/text_Shortcuts_activity"
            android:layout_width="235dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:text="Shortcuts"
            android:textSize="28dp"
            android:textStyle="bold"></TextView>

        <Space
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:background="@color/white"></Space>

        <Button
            android:id="@+id/Shortcuts_save_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Save"
            android:textColor="@android:color/black"
            app:backgroundTint="@color/white" />

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/white"></Space>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <TextView
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <TextView
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TextView" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:background="@color/Theme" />

    <LinearLayout
        android:id="@+id/Create_shortcut_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_control_point_24" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:id="@+id/textView6"
            android:layout_width="306dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="CREATE SHORTCUT" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="338dp"
        android:orientation="vertical">

        <TextView
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="TextView" />
    </LinearLayout>

</LinearLayout>